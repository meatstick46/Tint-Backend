  <div id="gallery-section" class="bg-secondary text-light  container-fluid ps-0 pe-0 ms-0 me-0 mw-100">
    <section aria-label="new-photos" class="container">
      <div class="carousel" data-carousel>
          <button class="previous button" data-carousel-button="prev">&#8592;</button>
          <button class="current button" data-carousel-button="next">&#8594;</button>

          <ul data-slides>
              <li class="slide" data-active><img src="/images/item-1.jpeg"></li>
              <li class="slide"><img src="/images/item-1.jpeg"></li>
              <li class="slide"><img src="/images/item-2.jpeg"></li>
              <li class="slide"><img src="/images/item-3.jpeg"></li>
              <li class="slide"><img src="/images/item-1.jpeg"></li>
          </ul>
      </div>
 
  </div>
  <script>
    const buttons = document.querySelectorAll("[data-carousel-button]");

buttons.forEach(button => {
    button.addEventListener("click", function(){
        const offset = button.dataset.carouselButton === "next" ? 1 : -1;
        const slide = button.closest("[data-carousel]").querySelector("[data-slides]");

        const activeSlide = document.querySelector("[data-active]");
        let newIndex = [...slide.children].indexOf(activeSlide) + offset;
        
        if(newIndex < 0) newIndex = slide.children.length - 1;
        if(newIndex >= slide.children.length) newIndex = 0;

        slide.children[newIndex].dataset.active = true;
        delete activeSlide.dataset.active;
    })
})
  </script>
